    <script>
        // Mobile menu toggle
        const mobileMenuBtn = document.getElementById('mobile-menu-btn');
        const navLinks = document.getElementById('nav-links');
        
        mobileMenuBtn.addEventListener('click', function() {
            navLinks.classList.toggle('active');
            mobileMenuBtn.innerHTML = navLinks.classList.contains('active') ? 
                '<i class="fas fa-times"></i>' : '<i class="fas fa-bars"></i>';
        });
        
        // Navbar scroll effect
        const navbar = document.getElementById('navbar');
        window.addEventListener('scroll', function() {
            if (window.scrollY > 100) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });
        
        // Scroll to top button
        const scrollTopBtn = document.querySelector('.scroll-top');
        window.addEventListener('scroll', function() {
            if (window.scrollY > 300) {
                scrollTopBtn.classList.add('active');
            } else {
                scrollTopBtn.classList.remove('active');
            }
        });
        
        scrollTopBtn.addEventListener('click', function() {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });
        
        // Section navigation
        document.addEventListener('DOMContentLoaded', function() {
            // Hide all sections except home
            document.querySelectorAll('section').forEach(section => {
                section.style.display = 'none';
            });
            document.getElementById('home').style.display = 'block';
            
            // Show about section by default
            showSection('about');
            
            // Add click event to nav links
            document.querySelectorAll('.nav-link').forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const sectionId = this.getAttribute('data-section');
                    showSection(sectionId);
                    
                    // Close mobile menu if open
                    navLinks.classList.remove('active');
                    mobileMenuBtn.innerHTML = '<i class="fas fa-bars"></i>';
                });
            });
        });
        
        function showSection(sectionId) {
            // Hide all sections
            document.querySelectorAll('section').forEach(section => {
                section.style.display = 'none';
                section.classList.remove('active');
            });
            
            // Show the selected section
            const section = document.getElementById(sectionId);
            if (section) {
                section.style.display = 'block';
                section.classList.add('active');
                
                // Scroll to the section
                window.scrollTo({
                    top: section.offsetTop - 80,
                    behavior: 'smooth'
                });
            }
        }
        
        // Animate sections when they come into view
        const animateOnScroll = function() {
            const sections = document.querySelectorAll('section.active');
            
            sections.forEach(section => {
                const sectionTop = section.getBoundingClientRect().top;
                const windowHeight = window.innerHeight;
                
                if (sectionTop < windowHeight * 0.75) {
                    const title = section.querySelector('.section-title h2');
                    if (title && !title.classList.contains('animated')) {
                        title.classList.add('animated');
                        
                        // Alternate between slide-left and slide-right
                        if (sections.length % 2 === 0) {
                            title.classList.add('slide-left');
                        } else {
                            title.classList.add('slide-right');
                        }
                    }
                }
            });
        };
        
        window.addEventListener('scroll', animateOnScroll);
        window.addEventListener('load', animateOnScroll);
        
        // Form submission
        const contactForm = document.getElementById('contactForm');
        if (contactForm) {
            contactForm.addEventListener('submit', function(e) {
                e.preventDefault();
                
                // Here you would typically send the form data to a server
                alert('Thank you for your message! I will get back to you soon.');
                contactForm.reset();
            });
        }
        
        // Dynamic profile image loading
        function loadProfileImage() {
    const profileImageUrl = 'https://raw.githubusercontent.com/HarisKumar2812/profile/main/WhatsApp%20Image%202025-03-26%20at%2015.47.37_9b77d4bc.jpg';
    const profileImg = document.getElementById('profile-img');
    
    if (profileImageUrl) {
        profileImg.src = profileImageUrl;
        profileImg.onerror = function() {
            // Fallback image if the URL is invalid
            profileImg.src = 'https://via.placeholder.com/350';
        };
    }
}
        
        // Call the function when the page loads
        window.addEventListener('load', loadProfileImage);
    </script>
</body>
</html>
